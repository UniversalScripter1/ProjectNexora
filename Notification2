local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

local notif = {}
local active_notifications = {}

-- CONFIGURATION
local SPACING = 75
local START_Y_OFFSET = 0.65 -- Moved up to avoid jump button
local WIDTH = 300
local HEIGHT = 65

local function updateStack()
    for i, frame in ipairs(active_notifications) do
        -- Newer notifications at the bottom of the stack, older ones push UP
        -- Positioned higher than usual (0.65 instead of 0.8) to stay clear of jump buttons
        local targetY = START_Y_OFFSET - ((#active_notifications - i) * 0.1)
        local targetPos = UDim2.new(1, -(WIDTH + 20), targetY, 0)
        
        TweenService:Create(frame, TweenInfo.new(0.6, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {
            Position = targetPos
        }):Play()
    end
end

function notif:Notification(title, desc, font, font2, visibletime)
    local parent = game:GetService("CoreGui") or Players.LocalPlayer:WaitForChild("PlayerGui")
    
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "MacNotif_" .. math.random(100, 999)
    screenGui.DisplayOrder = 999
    screenGui.Parent = parent

    -- Main Container (Mac Glass Style)
    local main = Instance.new("Frame")
    main.Name = "Main"
    main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    main.BackgroundTransparency = 0.2 -- Glass effect
    main.Size = UDim2.new(0, WIDTH, 0, HEIGHT)
    main.Position = UDim2.new(1.5, 0, START_Y_OFFSET, 0) -- Slide in from right
    main.BorderSizePixel = 0
    main.Parent = screenGui

    local mainCorner = Instance.new("UICorner")
    mainCorner.CornerRadius = UDim.new(0, 14) -- Rounder Mac style
    mainCorner.Parent = main

    -- Optional: Subtle white border for "glass" look
    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(255, 255, 255)
    stroke.Transparency = 0.8
    stroke.Thickness = 1
    stroke.Parent = main

    -- Mac App Icon Placeholder (Circular)
    local icon = Instance.new("Frame")
    icon.Name = "Icon"
    icon.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    icon.Position = UDim2.new(0, 12, 0, 12)
    icon.Size = UDim2.new(0, 40, 0, 40)
    icon.Parent = main

    local iconCorner = Instance.new("UICorner")
    iconCorner.CornerRadius = UDim.new(1, 0)
    iconCorner.Parent = icon

    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "Title"
    titleLabel.Text = title or "Notification"
    titleLabel.Font = Enum.Font[font or "GothamBold"]
    titleLabel.TextColor3 = Color3.new(1, 1, 1)
    titleLabel.TextSize = 14
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.BackgroundTransparency = 1
    titleLabel.Position = UDim2.new(0, 62, 0.2, 0)
    titleLabel.Size = UDim2.new(0, 200, 0, 20)
    titleLabel.Parent = main

    local descLabel = Instance.new("TextLabel")
    descLabel.Name = "Description"
    descLabel.Text = desc or "Content details"
    descLabel.Font = Enum.Font[font2 or "Gotham"]
    descLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
    descLabel.TextSize = 12
    descLabel.TextXAlignment = Enum.TextXAlignment.Left
    descLabel.BackgroundTransparency = 1
    descLabel.Position = UDim2.new(0, 62, 0.5, 0)
    descLabel.Size = UDim2.new(0, 210, 0, 20)
    descLabel.Parent = main

    -- Close Button (Hidden until hover usually, but keeping simple 'X' for mobile/usability)
    local closeBtn = Instance.new("TextButton")
    closeBtn.Name = "Close"
    closeBtn.Text = "âœ•"
    closeBtn.Font = Enum.Font.GothamBold
    closeBtn.TextSize = 12
    closeBtn.TextColor3 = Color3.new(1, 1, 1)
    closeBtn.BackgroundTransparency = 0.8
    closeBtn.BackgroundColor3 = Color3.fromRGB(200,0,0)
    closeBtn.Position = UDim2.new(0, -5, 0, -5) -- Small floating X
    closeBtn.Size = UDim2.new(0, 20, 0, 20)
    closeBtn.Visible = false -- Can be toggled if you want the Mac close look
    closeBtn.Parent = main
    
    local closeCorner = Instance.new("UICorner")
    closeCorner.CornerRadius = UDim.new(1, 0)
    closeCorner.Parent = closeBtn

    -- Tracking and Animation
    table.insert(active_notifications, main)
    updateStack()

    local function dismiss()
        local index = table.find(active_notifications, main)
        if index then table.remove(active_notifications, index) end
        
        -- Animation Out: Float Up and Fade Out
        local fadeTween = TweenService:Create(main, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
            Position = main.Position + UDim2.new(0, 0, -0.05, 0),
            BackgroundTransparency = 1
        })
        
        for _, v in ipairs(main:GetDescendants()) do
            if v:IsA("TextLabel") or v:IsA("TextButton") or v:IsA("UIStroke") then
                TweenService:Create(v, TweenInfo.new(0.4), {
                    [(v:IsA("UIStroke") and "Transparency" or "TextTransparency")] = 1
                }):Play()
            elseif v:IsA("Frame") then
                TweenService:Create(v, TweenInfo.new(0.4), {BackgroundTransparency = 1}):Play()
            end
        end

        fadeTween:Play()
        fadeTween.Completed:Connect(function()
            screenGui:Destroy()
            updateStack()
        end)
    end

    -- Click anywhere on the notification to dismiss (very Mac-like)
    local clickDetector = Instance.new("TextButton")
    clickDetector.Size = UDim2.new(1,0,1,0)
    clickDetector.BackgroundTransparency = 1
    clickDetector.Text = ""
    clickDetector.Parent = main
    clickDetector.MouseButton1Click:Connect(dismiss)

    task.delay(visibletime or 5, dismiss)
end

return notif
